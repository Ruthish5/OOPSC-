#include <iostream>

using namespace std;

int main() {
    int num1, num2;

    // Input
    cout << "Enter first integer: ";
    cin >> num1;
    cout << "Enter second integer: ";
    cin >> num2;

    // Addition
    cout << "Addition: " << num1 << " + " << num2 << " = " << num1 + num2 << endl;

    // Subtraction
    cout << "Subtraction: " << num1 << " - " << num2 << " = " << num1 - num2 << endl;

    // Multiplication
    cout << "Multiplication: " << num1 << " * " << num2 << " = " << num1 * num2 << endl;

    // Division
    if (num2 != 0) {
        cout << "Division: " << num1 << " / " << num2 << " = " << static_cast<double>(num1) / num2 << endl;
    } else {
        cout << "Division by zero is not allowed." << endl;
    }

    // Modulo
    if (num2 != 0) {
        cout << "Modulo: " << num1 << " % " << num2 << " = " << num1 % num2 << endl;
    } else {
        cout << "Modulo by zero is not allowed." << endl;
    }

    return 0;
}
