#include<iostream>

using namespace std;

int main() {
	int num1,num2,num3,avg;
	cout<<"Enter 1st integer:";
	cin>>num1;
	cout<<"Enter 2nd integer:";
	cin>>num2;
	cout<<"Enter 3rd integer:";
	cin>>num3;
	avg=num1+num2+num3;
	cout<<"The average of "<<num1<<", "<<num2<<" and "<<num3<<" is:"<<avg;
	
}
